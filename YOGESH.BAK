#include <iostream.h>
#include <conio.h>

void main()
{
    clrscr();

    char str1[100], str2[100], str3[200];
    int i, j, length = 0;

    // Input first string
    cout << "Enter first string: ";
    cin.getline(str1, 100);

    // Input second string
    cout << "Enter second string: ";
    cin.getline(str2, 100);

    // Calculate length of first string
    for (i = 0; str1[i] != '\0'; i++)
    {
        length++;
    }
    cout << "\nLength of first string: " << length;

    // Concatenate str1 and str2 into str3
    for (i = 0; str1[i] != '\0'; i++)
    {
        str3[i] = str1[i];
    }

    for (j = 0; str2[j] != '\0'; j++)
    {
        str3[i] = str2[j];
        i++;
    }
    str3[i] = '\0';

    cout << "\nConcatenated string: " << str3;

    // Reverse the first string
    char rev[100];
    length = 0;

    for (i = 0; str1[i] != '\0'; i++)
    {
        length++;
    }

    for (i = length - 1, j = 0; i >= 0; i--, j++)
    {
        rev[j] = str1[i];
    }
    rev[j] = '\0';

    cout << "\nReversed first string: " << rev;

    getch();
}



